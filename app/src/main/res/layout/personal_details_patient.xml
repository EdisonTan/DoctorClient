<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_light">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="24sp"
            android:text="姓名："

            android:textStyle="bold" />

        <TextView
            android:textSize="24sp"
            android:id="@+id/patient_personal_information_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="朱迪" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="24sp"
            android:text="性别："
            android:textStyle="bold" />

        <TextView
            android:textSize="24sp"
            android:id="@+id/patient_personal_information_gender"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="男" />


    </LinearLayout>

    <LinearLayout
        android:weightSum="4"
        android:id="@+id/three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="24sp"
            android:text="生日："
            android:textStyle="bold" />

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center">

            <TextView
                android:textSize="24sp"
                android:gravity="center"
                android:id="@+id/patient_personal_information_birthday_year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2016"/>
            <TextView
                android:textSize="24sp"
                android:gravity="center"
                android:text="年"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:textSize="24sp"
                android:gravity="center"
                android:id="@+id/patient_personal_information_birthday_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="05"/>
            <TextView
                android:textSize="24sp"
                android:gravity="center"
                android:text="月"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:textSize="24sp"
                android:gravity="center"
                android:id="@+id/patient_personal_information_birthday_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="06"/>
            <TextView
                android:textSize="24sp"
                android:gravity="center"
                android:text="日"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="24sp"
            android:text="病历："
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="24sp"
            android:text="0001234" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp" />

    <LinearLayout
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="18sp"
            android:text="电话号码："
            android:textStyle="bold" />

        <TextView
            android:textSize="24sp"
            android:id="@+id/patient_personal_information_phone_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="left"

            android:text="159****0402" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="18sp"
            android:text="联系地址："
            android:textStyle="bold" />

        <TextView
            android:textSize="24sp"
            android:id="@+id/patient_personal_information_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="left"

            android:text="广州市天河区****" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp" />

